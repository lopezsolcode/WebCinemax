@page "/butacas/delete/{IdButaca:int}"
@using Microsoft.EntityFrameworkCore
@using WebCinemax.Models
@inject IDbContextFactory<WebCinemax.Models.CineDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Eliminar Butaca</PageTitle>

<h1>Eliminar Butaca</h1>
<hr />

@if (Butaca is null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <div class="alert alert-warning" role="alert">
        ¿Está seguro de que desea eliminar esta butaca?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Número de butaca:</dt>
        <dd class="col-sm-9">@Butaca.Numero</dd>

        <dt class="col-sm-3">Fila:</dt>
        <dd class="col-sm-9">@Butaca.Fila</dd>

        <dt class="col-sm-3">Sala:</dt>
        <dd class="col-sm-9">@Butaca.IdSalaNavigation?.Nombre</dd>
    </dl>

    <button class="btn btn-danger" @onclick="DeleteButaca">Eliminar</button>
    <a href="/butacas" class="btn btn-secondary ms-2">Cancelar</a>
}

@code {
    [Parameter]
    public int IdButaca { get; set; }

    private Butaca? Butaca { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        using var context = DbFactory.CreateDbContext();

        Butaca = await context.Butacas
            .Include(b => b.IdSalaNavigation)
            .FirstOrDefaultAsync(b => b.IdButaca == IdButaca);

        if (Butaca is null)
        {
            NavigationManager.NavigateTo("/notfound");
        }
    }

    private async Task DeleteButaca()
    {
        using var context = DbFactory.CreateDbContext();

        var butacaToDelete = await context.Butacas.FindAsync(IdButaca);
        if (butacaToDelete is not null)
        {
            context.Butacas.Remove(butacaToDelete);
            await context.SaveChangesAsync();
        }

        NavigationManager.NavigateTo("/butacas");
    }
}