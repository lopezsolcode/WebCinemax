@page "/butacas/create"
@using WebCinemax.Models
@using WebCinemax.Services
@inject ButacaService ButacaService
@inject SalaService SalaService
@inject NavigationManager NavigationManager

<PageTitle>Crear Butaca</PageTitle>

<h1>Crear Butaca</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm Model="Butaca" OnValidSubmit="AddButaca">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert" />

            <div class="mb-3">
                <label for="numero" class="form-label">Número:</label>
                <InputNumber id="numero" @bind-Value="Butaca.Numero" class="form-control" />
                <ValidationMessage For="() => Butaca.Numero" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="fila" class="form-label">Fila:</label>
                <InputText id="fila" @bind-Value="Butaca.Fila" class="form-control" />
                <ValidationMessage For="() => Butaca.Fila" class="text-danger" />
            </div>

            <div class="form-check mb-3">
                <InputCheckbox id="esvip" @bind-Value="Butaca.EsVip" class="form-check-input" />
                <label class="form-check-label" for="esvip">Es VIP</label>
                <ValidationMessage For="() => Butaca.EsVip" class="text-danger" />
            </div>

            <div class="form-check mb-3">
                <InputCheckbox id="esaccesible" @bind-Value="Butaca.EsAccesible" class="form-check-input" />
                <label class="form-check-label" for="esaccesible">Es Accesible</label>
                <ValidationMessage For="() => Butaca.EsAccesible" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="sala" class="form-label">Sala:</label>
                <InputSelect id="sala" @bind-Value="Butaca.IdSala" class="form-select">
                    <option value="">-- Seleccione una sala --</option>
                    @foreach (var sala in Salas)
                    {
                        <option value="@sala.IdSala">@sala.Nombre</option>
                    }
                </InputSelect>
                <ValidationMessage For="() => Butaca.IdSala" class="text-danger" />
            </div>

            <button type="submit" class="btn btn-primary">Crear</button>
        </EditForm>
    </div>
</div>

<div class="mt-3">
    <a href="/butacas">Volver a la lista</a>
</div>

@code {
    private Butaca Butaca { get; set; } = new();
    private List<Sala> Salas = new();

    protected override async Task OnInitializedAsync()
    {
        Salas = await SalaService.GetAllAsync();
    }

    private async Task AddButaca()
    {
        await ButacaService.AddAsync(Butaca);
        NavigationManager.NavigateTo("/butacas");
    }
}