@page "/butacas"
@using WebCinemax.Models
@using WebCinemax.Services
@inject ButacaService ButacaService
@inject NavigationManager Navigation

<PageTitle>Butacas</PageTitle>

<h1>Butacas</h1>

<p>
    <button class="btn btn-primary" @onclick="CrearNueva">Crear nueva</button>
</p>

@if (Butacas == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Número</th>
                <th>Fila</th>
                <th>VIP</th>
                <th>Accesible</th>
                <th>Sala</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var butaca in Butacas)
            {
                <tr>
                    <td>@butaca.Numero</td>
                    <td>@butaca.Fila</td>
                    <td>@(butaca.EsVip ? "Sí" : "No")</td>
                    <td>@(butaca.EsAccesible ? "Sí" : "No")</td>
                    <td>@butaca.IdSalaNavigation?.Nombre</td>
                    <td>
                        <button class="btn btn-secondary btn-sm" @onclick="() => Editar(butaca.IdButaca)">Editar</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => Eliminar(butaca.IdButaca)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Butaca>? Butacas;

    protected override async Task OnInitializedAsync()
    {
        Butacas = await ButacaService.GetAllAsync();
    }

    private void CrearNueva() => Navigation.NavigateTo("/butacas/create");

    private void Editar(int id) => Navigation.NavigateTo($"/butacas/edit/{id}");

    private void Eliminar(int id) => Navigation.NavigateTo($"/butacas/delete?idbutaca={id}");
}