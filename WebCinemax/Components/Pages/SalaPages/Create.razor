@page "/salas/create"
@using WebCinemax.Models
@using WebCinemax.Services
@inject SalaService SalaService
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Crear sala</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm Model="Sala" OnValidSubmit="GuardarSala">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre:</label>
                <InputText id="nombre" @bind-Value="Sala.Nombre" class="form-control" />
                <ValidationMessage For="() => Sala.Nombre" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="capacidad" class="form-label">Capacidad:</label>
                <InputNumber id="capacidad" @bind-Value="Sala.Capacidad" class="form-control" />
                <ValidationMessage For="() => Sala.Capacidad" class="text-danger" />
            </div>

            <button type="submit" class="btn btn-primary">Crear</button>
        </EditForm>
    </div>
</div>

<div class="mt-3">
    <a href="/salas">Volver al listado</a>
</div>

@code {
    private Sala Sala { get; set; } = new();

    private async Task GuardarSala()
    {
        await SalaService.AddAsync(Sala);
        NavigationManager.NavigateTo("/salas");
    }
}