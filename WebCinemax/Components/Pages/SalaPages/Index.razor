@page "/salas"
@using WebCinemax.Models
@using WebCinemax.Services
@inject SalaService SalaService
@inject NavigationManager Navigation

<h1>Salas</h1>

<p>
    <button class="btn btn-primary" @onclick="CrearNueva">Crear nueva</button>
</p>

@if (salas == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Capacidad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in salas)
            {
                <tr>
                    <td>@s.Nombre</td>
                    <td>@s.Capacidad</td>
                    <td>
                        <button class="btn btn-secondary btn-sm" @onclick="() => Editar(s.IdSala)">Editar</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => EliminarConfirmado(s.IdSala)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Sala>? salas;

    protected override async Task OnInitializedAsync()
    {
        salas = await SalaService.GetAllAsync();
    }

    private void CrearNueva() => Navigation.NavigateTo("/salas/create");

    private void Editar(int id) => Navigation.NavigateTo($"/salas/edit/{id}");

    private void EliminarConfirmado(int id) => Navigation.NavigateTo($"/salas/delete/{id}");
}