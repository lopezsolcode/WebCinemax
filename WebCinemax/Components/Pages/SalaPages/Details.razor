@page "/salas/details"
@using Microsoft.EntityFrameworkCore
@using WebCinemax.Models
@inject IDbContextFactory<WebCinemax.Models.CineDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Sala</h2>
    <hr />
    @if (sala is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@sala.Nombre</dd>
            <dt class="col-sm-2">Capacidad</dt>
            <dd class="col-sm-10">@sala.Capacidad</dd>
        </dl>
        <div>
            <a href="@($"/salas/edit?idsala={sala.IdSala}")">Edit</a> |
            <a href="@($"/salas")">Back to List</a>
        </div>
    }
</div>

@code {
    private Sala? sala;

    [SupplyParameterFromQuery]
    private int IdSala { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        sala = await context.Salas.FirstOrDefaultAsync(m => m.IdSala == IdSala);

        if (sala is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
