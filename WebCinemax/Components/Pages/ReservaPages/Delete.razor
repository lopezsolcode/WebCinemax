@page "/reservas/delete"
@using Microsoft.EntityFrameworkCore
@using WebCinemax.Models
@inject IDbContextFactory<WebCinemax.Models.CineDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Reserva</h2>
    <hr />
    @if (reserva is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">FechaReserva</dt>
            <dd class="col-sm-10">@reserva.FechaReserva</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Confirmada</dt>
            <dd class="col-sm-10">@reserva.Confirmada</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">IdFuncion</dt>
            <dd class="col-sm-10">@reserva.IdFuncion</dd>
        </dl>
        <EditForm method="post" Model="reserva" OnValidSubmit="DeleteReserva" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(reserva is null)">Delete</button> |
            <a href="/reservas">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Reserva? reserva;

    [SupplyParameterFromQuery]
    private int IdReserva { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        reserva = await context.Reservas.FirstOrDefaultAsync(m => m.IdReserva == IdReserva);

        if (reserva is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteReserva()
    {
        using var context = DbFactory.CreateDbContext();
        context.Reservas.Remove(reserva!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/reservas");
    }
}
