@page "/funcions"
@using WebCinemax.Models
@using WebCinemax.Services
@inject FuncionService FuncionService
@inject NavigationManager Navigation

<h1>Funciones</h1>

<p>
    <button class="btn btn-primary" @onclick="CrearNueva">Crear nueva</button>
</p>

@if (funciones == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Película</th>
                <th>Sala</th>
                <th>Fecha y Hora</th>
                <th>Precio Entrada</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in funciones)
            {
                <tr>
                    <td>@f.IdPeliculaNavigation?.Titulo</td>
                    <td>@f.IdSalaNavigation?.Nombre</td>
                    <td>@f.FechaHora.ToString("g")</td>
                    <td>@f.PrecioEntrada.ToString("C")</td>
                    <td>
                        <button class="btn btn-secondary btn-sm" @onclick="() => Editar(f.IdFuncion)">Editar</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => EliminarConfirmado(f.IdFuncion)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Funcion>? funciones;

    protected override async Task OnInitializedAsync()
    {
        funciones = await FuncionService.GetAllAsync();
    }

    private void CrearNueva() => Navigation.NavigateTo("/funcions/create");

    private void Editar(int id) => Navigation.NavigateTo($"/funcions/edit/{id}");

    private void EliminarConfirmado(int id) => Navigation.NavigateTo($"/funcions/delete/{id}");
}