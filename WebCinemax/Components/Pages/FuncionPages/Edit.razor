@page "/funcions/edit/{IdFuncion:int}"
@using Microsoft.EntityFrameworkCore
@using WebCinemax.Models
@inject IDbContextFactory<WebCinemax.Models.CineDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Funcion</PageTitle>

<h1>Editar Función</h1>
<hr />

@if (Funcion is null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm Model="Funcion" OnValidSubmit="UpdateFuncion">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" role="alert" />

                <div class="mb-3">
                    <label for="fechahora" class="form-label">Fecha y hora:</label>
                    <InputDate id="fechahora" @bind-Value="Funcion.FechaHora" class="form-control" />
                    <ValidationMessage For="() => Funcion.FechaHora" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label for="precioentrada" class="form-label">Precio de entrada:</label>
                    <InputNumber id="precioentrada" @bind-Value="Funcion.PrecioEntrada" class="form-control" />
                    <ValidationMessage For="() => Funcion.PrecioEntrada" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label for="pelicula" class="form-label">Película:</label>
                    <InputSelect id="pelicula" @bind-Value="Funcion.IdPelicula" class="form-select">
                        <option value="">-- Seleccione una película --</option>
                        @foreach (var pelicula in Peliculas)
                        {
                            <option value="@pelicula.IdPelicula">@pelicula.Titulo</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="() => Funcion.IdPelicula" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label for="sala" class="form-label">Sala:</label>
                    <InputSelect id="sala" @bind-Value="Funcion.IdSala" class="form-select">
                        <option value="">-- Seleccione una sala --</option>
                        @foreach (var sala in Salas)
                        {
                            <option value="@sala.IdSala">@sala.Nombre</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="() => Funcion.IdSala" class="text-danger" />
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>
                <a href="/funcions" class="btn btn-secondary ms-2">Volver</a>
            </EditForm>
        </div>
    </div>
}

@code {
    [Parameter]
    public int IdFuncion { get; set; }

    private Funcion? Funcion { get; set; }
    private List<Pelicula> Peliculas = new();
    private List<Sala> Salas = new();

    protected override async Task OnParametersSetAsync()
    {
        using var context = DbFactory.CreateDbContext();

        Peliculas = await context.Peliculas.ToListAsync();
        Salas = await context.Salas.ToListAsync();

        Funcion = await context.Funciones
            .Include(f => f.IdPeliculaNavigation)
            .Include(f => f.IdSalaNavigation)
            .FirstOrDefaultAsync(f => f.IdFuncion == IdFuncion);

        if (Funcion is null)
        {
            NavigationManager.NavigateTo("/notfound");
        }
    }

    private async Task UpdateFuncion()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Funcion!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
            NavigationManager.NavigateTo("/funcions");
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!FuncionExists(Funcion!.IdFuncion))
            {
                NavigationManager.NavigateTo("/notfound");
            }
            else
            {
                throw;
            }
        }
    }

    private bool FuncionExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Funciones.Any(e => e.IdFuncion == id);
    }
}