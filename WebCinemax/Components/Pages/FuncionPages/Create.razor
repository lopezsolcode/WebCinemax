@page "/funcions/create"
@using Microsoft.EntityFrameworkCore
@using WebCinemax.Models
@inject IDbContextFactory<WebCinemax.Models.CineDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Crear Función</PageTitle>

<h1>Crear Función</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <EditForm Model="Funcion" OnValidSubmit="AddFuncion">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert" />

            <div class="mb-3">
                <label for="fecha" class="form-label">Fecha:</label>
                <InputDate id="fecha" @bind-Value="SelectedDate" class="form-control" />
                <ValidationMessage For="() => SelectedDate" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="hora" class="form-label">Hora:</label>
                <InputText id="hora" @bind-Value="SelectedTimeString" type="time" class="form-control" />
                <ValidationMessage For="() => SelectedTimeString" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="precioentrada" class="form-label">Precio de entrada:</label>
                <InputNumber id="precioentrada" @bind-Value="Funcion.PrecioEntrada" class="form-control" />
                <ValidationMessage For="() => Funcion.PrecioEntrada" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="pelicula" class="form-label">Película:</label>
                <InputSelect id="pelicula" @bind-Value="Funcion.IdPelicula" class="form-select">
                    <option value="">-- Seleccione una película --</option>
                    @foreach (var pelicula in Peliculas)
                    {
                        <option value="@pelicula.IdPelicula">@pelicula.Titulo</option>
                    }
                </InputSelect>
                <ValidationMessage For="() => Funcion.IdPelicula" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="sala" class="form-label">Sala:</label>
                <InputSelect id="sala" @bind-Value="Funcion.IdSala" class="form-select">
                    <option value="">-- Seleccione una sala --</option>
                    @foreach (var sala in Salas)
                    {
                        <option value="@sala.IdSala">@sala.Nombre</option>
                    }
                </InputSelect>
                <ValidationMessage For="() => Funcion.IdSala" class="text-danger" />
            </div>

            <button type="submit" class="btn btn-primary">Crear</button>
            <a href="/funcions" class="btn btn-secondary ms-2">Volver</a>
        </EditForm>
    </div>
</div>

@code {
    private Funcion Funcion { get; set; } = new();
    private List<Pelicula> Peliculas = new();
    private List<Sala> Salas = new();
    private DateTime SelectedDate { get; set; } = DateTime.Today;
    private TimeSpan SelectedTime { get; set; } = DateTime.Now.TimeOfDay;
    private string SelectedTimeString
    {
        get => SelectedTime.ToString(@"hh\:mm"); // Formato para el control de tiempo (HH:mm)
        set
        {
            if (TimeSpan.TryParse(value, out var parsedTime))
            {
                SelectedTime = parsedTime;
            }
        }
    }


    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Peliculas = await context.Peliculas.ToListAsync();
        Salas = await context.Salas.ToListAsync();
    }

    private async Task AddFuncion()
    {
        using var context = DbFactory.CreateDbContext();


        // Validación simple
        if (Funcion.IdPelicula == 0 || Funcion.IdSala == 0)
        {
            // Se podría mostrar mensaje de error aquí, pero el ValidationSummary ya cubrirá los errores de formulario.
            return;
        }


        Funcion.FechaHora = SelectedDate.Date + SelectedTime;
        context.Funciones.Add(Funcion);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/funcions");
    }
}