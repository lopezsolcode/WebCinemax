@page "/peliculas"
@using WebCinemax.Models
@using WebCinemax.Services
@inject PeliculaService PeliculaService
@inject NavigationManager Navigation

<h1>Películas</h1>

<p>
    <button class="btn btn-primary" @onclick="CrearNueva">Crear nueva</button>
</p>

@if (peliculas == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Título</th>
                <th>Género</th>
                <th>Duración</th>
                <th>Idioma</th>
                <th>Poster URL</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in peliculas)
            {
                <tr>
                    <td>@p.Titulo</td>
                    <td>@p.Genero</td>
                    <td>@p.DuracionMinutos</td>
                    <td>@p.Idioma</td>
                    <td>@p.PosterUrl</td>
                    <td>
                        <button class="btn btn-secondary btn-sm" @onclick="() => Editar(p.IdPelicula)">Editar</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => EliminarConfirmado(p.IdPelicula)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Pelicula>? peliculas;


    protected override async Task OnInitializedAsync()
    {
        peliculas = await PeliculaService.GetAllAsync();
    }
    private void CrearNueva() => Navigation.NavigateTo("/peliculas/create");

    private void Editar(int id) => Navigation.NavigateTo($"/peliculas/edit/{id}");

    private void EliminarConfirmado(int id) => Navigation.NavigateTo($"/peliculas/delete/{id}");
}