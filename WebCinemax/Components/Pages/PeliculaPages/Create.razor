@page "/peliculas/create"
@using Microsoft.EntityFrameworkCore
@using WebCinemax.Models
@inject IDbContextFactory<WebCinemax.Models.CineDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Crear nueva película</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Pelicula" OnValidSubmit="AddPelicula" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="titulo" class="form-label">Título:</label> 
                <InputText id="titulo" @bind-Value="Pelicula.Titulo" class="form-control" /> 
                <ValidationMessage For="() => Pelicula.Titulo" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="genero" class="form-label">Género:</label> 
                <InputText id="genero" @bind-Value="Pelicula.Genero" class="form-control" /> 
                <ValidationMessage For="() => Pelicula.Genero" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="clasificacion" class="form-label">Clasificación:</label> 
                <InputText id="clasificacion" @bind-Value="Pelicula.Clasificacion" class="form-control" /> 
                <ValidationMessage For="() => Pelicula.Clasificacion" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="duracionminutos" class="form-label">Duración (minutos):</label> 
                <InputNumber id="duracionminutos" @bind-Value="Pelicula.DuracionMinutos" class="form-control" /> 
                <ValidationMessage For="() => Pelicula.DuracionMinutos" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="idioma" class="form-label">Idioma:</label> 
                <InputText id="idioma" @bind-Value="Pelicula.Idioma" class="form-control" /> 
                <ValidationMessage For="() => Pelicula.Idioma" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="posterurl" class="form-label">Poster:</label> 
                <InputText id="posterurl" @bind-Value="Pelicula.PosterUrl" class="form-control" /> 
                <ValidationMessage For="() => Pelicula.PosterUrl" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary  mt-3 mb-3 mr-3">Guardar</button>
            <a class="btn btn-secondary" href="/peliculas">Volver</a>
        </EditForm>
    </div>
</div>


@code {
    [SupplyParameterFromForm]
    private Pelicula Pelicula { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddPelicula()
    {
        using var context = DbFactory.CreateDbContext();
        context.Peliculas.Add(Pelicula);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/peliculas");
    }
}
