@page "/peliculas/edit/{IdPelicula:int}"
@using WebCinemax.Models
@using WebCinemax.Services
@inject PeliculaService PeliculasService
@inject NavigationManager NavigationManager

<PageTitle>Editar película</PageTitle>

<h1>Editar película</h1>
<hr />

@if (Pelicula is null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <EditForm Model="@Pelicula" OnValidSubmit="UpdatePelicula">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label for="titulo" class="form-label">Título</label>
            <InputText id="titulo" @bind-Value="Pelicula.Titulo" class="form-control" />
            <ValidationMessage For="() => Pelicula.Titulo" />
        </div>

        <div class="mb-3">
            <label for="genero" class="form-label">Género</label>
            <InputText id="genero" @bind-Value="Pelicula.Genero" class="form-control" />
            <ValidationMessage For="() => Pelicula.Genero" />
        </div>

        <div class="mb-3">
            <label for="clasificacion" class="form-label">Clasificación</label>
            <InputText id="clasificacion" @bind-Value="Pelicula.Clasificacion" class="form-control" />
            <ValidationMessage For="() => Pelicula.Clasificacion" />
        </div>

        <div class="mb-3">
            <label for="duracion" class="form-label">Duración (minutos)</label>
            <InputNumber id="duracion" @bind-Value="Pelicula.DuracionMinutos" class="form-control" />
            <ValidationMessage For="() => Pelicula.DuracionMinutos" />
        </div>

        <div class="mb-3">
            <label for="idioma" class="form-label">Idioma</label>
            <InputText id="idioma" @bind-Value="Pelicula.Idioma" class="form-control" />
            <ValidationMessage For="() => Pelicula.Idioma" />
        </div>

        <div class="mb-3">
            <label for="posterurl" class="form-label">Poster URL</label>
            <InputText id="posterurl" @bind-Value="Pelicula.PosterUrl" class="form-control" />
            <ValidationMessage For="() => Pelicula.PosterUrl" />
        </div>

        <button type="submit" class="btn btn-primary mb-3">Guardar</button>
        <a href="/peliculas" class="btn btn-secondary ms-2 mb-3">Volver</a>
    </EditForm>
}

@code {
    [Parameter]
    public int IdPelicula { get; set; }

    private Pelicula? Pelicula;

    protected override async Task OnInitializedAsync()
    {
        Pelicula = await PeliculasService.GetByIdAsync(IdPelicula);
        if (Pelicula is null)
        {
            NavigationManager.NavigateTo("/notfound");
        }
    }

    private async Task UpdatePelicula()
    {
        var success = await PeliculasService.UpdateAsync(Pelicula!);
        if (success)
            NavigationManager.NavigateTo("/peliculas");
        else
            NavigationManager.NavigateTo("/notfound");
    }
}